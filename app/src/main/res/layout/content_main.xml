<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/top_bar_view"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar_view"
        app:layout_constraintTop_toBottomOf="@id/top_bar_view" />

    <View
        android:id="@+id/bottom_bar_view"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/btn_capture"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@color/black50"
        android:contentDescription="@string/image_here"
        android:padding="@dimen/_9sdp"
        android:src="@drawable/ic_capture"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:roundPercent="1" />

    <ImageView
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:contentDescription="@string/image_here"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_menu"
        app:layout_constraintBottom_toBottomOf="@id/top_bar_view"
        app:layout_constraintStart_toStartOf="@id/top_bar_view"
        app:layout_constraintTop_toTopOf="@id/top_bar_view" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/camera_revert"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_8sdp"
        android:background="@color/black50"
        android:contentDescription="@string/image_here"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_camera_revert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar_view"
        app:roundPercent="1" />

    <ImageView
        android:id="@+id/bottom_ocr"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="@string/image_here"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ic_bot_files"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bar_view"
        app:layout_constraintEnd_toStartOf="@id/bottom_people"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bottom_bar_view" />

    <ImageView
        android:id="@+id/bottom_people"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="@string/image_here"
        android:src="@drawable/ic_bot_people"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bar_view"
        app:layout_constraintEnd_toStartOf="@id/bottom_money"
        app:layout_constraintStart_toEndOf="@id/bottom_ocr"
        app:layout_constraintTop_toTopOf="@id/bottom_bar_view" />

    <ImageView
        android:id="@+id/bottom_money"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="@string/image_here"
        android:src="@drawable/ic_bot_money"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bar_view"
        app:layout_constraintEnd_toStartOf="@id/bottom_home"
        app:layout_constraintStart_toEndOf="@id/bottom_people"
        app:layout_constraintTop_toTopOf="@id/bottom_bar_view" />

    <ImageView
        android:id="@+id/bottom_home"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="@string/image_here"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ic_bot_home"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bar_view"
        app:layout_constraintEnd_toStartOf="@id/bottom_colors"
        app:layout_constraintStart_toEndOf="@id/bottom_money"
        app:layout_constraintTop_toTopOf="@id/bottom_bar_view" />

    <ImageView
        android:id="@+id/bottom_colors"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="@string/image_here"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ic_bot_colors"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bar_view"
        app:layout_constraintEnd_toStartOf="@id/bottom_barcode"
        app:layout_constraintStart_toEndOf="@id/bottom_home"
        app:layout_constraintTop_toTopOf="@id/bottom_bar_view" />

    <ImageView
        android:id="@+id/bottom_barcode"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="@string/image_here"
        android:src="@drawable/ic_bot_barcode"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bar_view"
        app:layout_constraintEnd_toStartOf="@id/bottom_street_view"
        app:layout_constraintStart_toEndOf="@id/bottom_colors"
        app:layout_constraintTop_toTopOf="@id/bottom_bar_view" />

    <ImageView
        android:id="@+id/bottom_street_view"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:contentDescription="@string/image_here"
        android:src="@drawable/ic_bot_street_view"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bar_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bottom_barcode"
        app:layout_constraintTop_toTopOf="@id/bottom_bar_view" />
</androidx.constraintlayout.widget.ConstraintLayout>